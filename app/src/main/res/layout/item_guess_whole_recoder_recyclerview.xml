<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/item_ly"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="@dimen/offset_4dp">

    <TextView
        android:id="@+id/guess_whole_period_count"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_2dp"
        android:gravity="left"
        android:text="第125期"
        android:textColor="@color/gray"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/guessWholeItemResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_2dp"
            android:gravity="left"
            android:text="预测结果"/>

        <TextView
            android:id="@+id/guessWholeActualResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_2dp"
            android:gravity="right"
            android:text="实际结果"
            android:textColor="@color/gray"/>
    </LinearLayout>

</LinearLayout>
