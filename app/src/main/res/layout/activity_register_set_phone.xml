<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_register"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.jiangtao.shuzicai.model.user.RegisterSetPhoneActivity">

    <!--toolbar-->
    <include
        android:id="@+id/include"
        layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/phoneNumberEdt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/offset_48dp"
        android:layout_marginTop="@dimen/offset_48dp"
        android:background="@color/gray"
        android:hint="输入手机号"
        android:inputType="phone"
        android:maxEms="11"
        android:padding="@dimen/offset_4dp"/>

    <!--验证码-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_24dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/verifyCodeEdt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/offset_48dp"
            android:background="@color/gray"
            android:inputType="textPersonName"
            android:maxEms="6"
            android:padding="@dimen/offset_4dp"
            android:text="Name"/>

        <Button
            android:id="@+id/VerifyCodeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/offset_16dp"
            android:background="@color/peru"
            android:text="获取验证码"/>
    </LinearLayout>


    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_28dp"
        android:layout_marginRight="@dimen/offset_28dp"
        android:layout_marginTop="@dimen/offset_28dp"
        android:background="@color/peru"
        android:text="下一步"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/registrationAgreementBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offset_28dp"
        android:text="注册即表示同意用户协议"/>

</LinearLayout>
