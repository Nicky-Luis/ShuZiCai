<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="@dimen/offset_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rechargeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2015-04-15 18:15"
            android:textColor="@color/main_light_black"
            android:textSize="@dimen/font_size_small"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inviteUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="被邀请的人"
            android:layout_marginRight="@dimen/offset_10dp"
            android:textColor="@color/main_light_black"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:id="@+id/rechargeCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="充值了100金币"
            android:textColor="@color/main_light_black"
            android:textSize="@dimen/font_size_normal"/>

        <TextView
            android:id="@+id/rewardValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+8金币"
            android:textColor="@color/main_light_black"
            android:textSize="@dimen/font_size_normal"/>
    </LinearLayout>


</LinearLayout>
