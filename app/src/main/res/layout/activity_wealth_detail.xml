<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_wealth"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiangtao.shuzicai.model.user.WealthDetailActivity">

    <!--toolbar-->
    <include layout="@layout/toolbar"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/wealth_detail_record_refresh_widget"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_light_white"
        android:orientation="vertical">

        <ListView
            android:id="@+id/wealthDetailRecordListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
