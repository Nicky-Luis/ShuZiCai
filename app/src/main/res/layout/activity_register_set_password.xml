<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_register_set_password"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.jiangtao.shuzicai.model.user.RegisterSetPasswordActivity">


    <!--toolbar-->
    <include layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/phoneNumberEdt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/offset_48dp"
        android:layout_marginTop="@dimen/offset_48dp"
        android:background="@color/gray"
        android:ems="11"
        android:hint="密码"
        android:inputType="textPassword"
        android:padding="@dimen/offset_4dp"/>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offset_28dp"
        android:layout_marginRight="@dimen/offset_28dp"
        android:layout_marginTop="@dimen/offset_28dp"
        android:background="@color/peru"
        android:text="下一步"/>

</LinearLayout>
