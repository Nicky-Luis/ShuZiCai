<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/goods_item_ly"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:padding="@dimen/offset_4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gussIndexType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_2dp"
            android:gravity="left"
            android:text="伦敦金:"
            android:textSize="@dimen/font_size_small"/>

        <TextView
            android:id="@+id/gussType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_2dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="百分位直选"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_small"/>

        <TextView
            android:id="@+id/guss_mantissa_period_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_2dp"
            android:gravity="left"
            android:text="第125期"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_small"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/offset_4dp">

        <TextView
            android:id="@+id/gussMantissaResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_2dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="预测结果"/>

        <TextView
            android:id="@+id/actualResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_2dp"
            android:gravity="right"
            android:text="实际结果"
            android:textColor="@color/gray"/>
    </LinearLayout>

</LinearLayout>
