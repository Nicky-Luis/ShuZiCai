<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/offset_2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset_4dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/offset_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wealth_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2017-02-08"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/offset_4dp">

            <TextView
                android:id="@+id/wealth_detail_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="兑换商品"
                android:textColor="@color/main_light_black"
                android:textSize="@dimen/font_size_normal"/>

            <TextView
                android:id="@+id/wealth_detail_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="50金币"
                android:textColor="@color/gold"
                android:textSize="@dimen/font_size_large"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
